<%= form_for(@dish) do |f| %>
    <% if @dish.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

          <ul>
            <% @dish.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div id="dish_name">
      <%= f.label :dish_name, 'Nazwa'%>
      <%= f.text_field :dish_name %>
    </div>

    <div class="dish_details">
        <fieldset class="dish">
            <legend>Wybierz składniki</legend>

            <div class="ingredient_form_fields">
              <%= f.fields_for :ingredients do |ingredient_builder| %>
                  <%= render 'ingredients_form', f: ingredient_builder %>
              <% end %>
            </div>

            <%= link_to  "Dodaj składnik", '#', class: 'add_ingredient_fields' %>
        </fieldset>

        <fieldset class="dish">
          <legend>Wykonanie:</legend>
          <%= f.text_area :steps %>
        </fieldset>
    </div>

    <div class="actions">
      <%= f.submit "Zapisz danie" %>
    </div>

<% end %>
