<br>
<table class="month_calendar_view">
  <thead>
    <tr class="month_calendar_view">
      <th colspan="2"><%= @months[@month - 1] %></th>
      <th colspan="3"><%= @months[@month] %></th>
      <th colspan="2"><%= @months[@month + 1] %></th>
    </tr>
    <tr>
      <% @week_days.each_value do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each_value do |week_array| %>
      <tr>
        <% week_array.each do |day| %>
            <th>
              <%= day %><br>
              <% if find_menu(day) %>
                <% find_menu(day).meals.each do |meal| %>
                  <%= "#{@dish_types.find(meal.dish_type_id).name} - #{@dishes.find(meal.dish_id).dish_name.titleize}" %>
                  <br>
                <% end %>
              <% end %>
            </th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

